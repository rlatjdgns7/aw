    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "tesseract.js": "^4.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/multer": "^1.4.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^4.9.0",
    "firebase-functions-test": "^3.1.0"
  }
}