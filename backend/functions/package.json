{
  "name": "foodism-backend",
  "version": "1.0.0",
  "description": "Firebase Functions backend for Foodism app",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions,firestore",
    "dev": "npm run build && node lib/server.js",
    "dev:watch": "npm run build && nodemon lib/server.js",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "init-db": "npm run build && node lib/scripts/initializeDatabase.js"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@google-cloud/vision": "^4.3.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/multer": "^1.4.0",
    "@types/uuid": "^9.0.8",
    "firebase-functions-test": "^3.1.0",
    "nodemon": "^3.1.10",
    "typescript": "^4.9.0"
  }
}
