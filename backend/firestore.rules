rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to additives collection
    match /additives/{document} {
      allow read: if true;
    }
    
    // Allow public read access to recipes collection
    match /recipes/{document} {
      allow read: if true;
    }
    
    // Secure access to scan results - users can only access their own data
    match /scanResults/{document} {
      // Allow reading if user is authenticated and owns the document
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Allow writing if user is authenticated and owns the document
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Allow creating if user is authenticated and sets themselves as the owner
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
  }
}